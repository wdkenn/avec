<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:background="#1F7EBB"
    
    android:padding="10dp"
    >
   
   <LinearLayout
        android:id="@+id/itemData"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
         >
         
       
       
    	<TextView
         android:id="@+id/otherUserName"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:layout_width="match_parent"
         android:textColor="#FFFFFF"
         android:layout_height="wrap_content"
         android:textSize="22sp"
         android:text="@string/nearby_username"
        />
    	
    	
    	
    	<LinearLayout
    	    android:layout_height="wrap_content" 
    	    android:layout_width="fill_parent"
    	    android:orientation="horizontal"
    	    >
    	 
    	    <TextView
	    	    android:id="@+id/text"
	    	    android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
	         	android:textColor="#FFFFFF"
	         	android:textSize="12sp"
	         	android:text="Top Artists:"
	         	android:layout_marginRight="5dp"
    	     />
    	    
    	    <TextView
	    	    android:id="@+id/topThree"
	    	    android:layout_width="wrap_content"
	    	    android:textColor="#FFFFFF"
	    	    android:textSize="12sp"
	         	android:layout_height="wrap_content"
	         	android:text="@string/top_three"
    	     />
    	    
    	</LinearLayout>

    </LinearLayout>
    
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:textColor="#FFFFFF"
       android:layout_marginRight="20dp"
       android:text="Similiarity: "
       
       />
   
   <TextView 
       android:id="@+id/compatability"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:textColor="#FFFFFF"
       
       />

    

</RelativeLayout>
