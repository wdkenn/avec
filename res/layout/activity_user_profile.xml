<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F7EBB"
    android:weightSum="20"
    android:orientation="vertical"
     >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        >
        
        <TextView 
            android:id="@+id/usernameProfile"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:textSize="35sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10sp"
            android:paddingLeft="10sp"
            android:textColor="#FFFFFF"
            android:text="@string/usernameProfileString"
            />

        <Button 
            android:id="@+id/addFriendBtn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="5"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="@string/addFriendStatus"
            />
        
        
    </LinearLayout>
    
    <ListView 
        android:id="@+id/userArtistListViewProfile"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="18"
        ></ListView>
    
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Button 
            android:id="@+id/concertInviteBtn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="Invite to concert"
            />
        <Button 
            android:id="@+id/chatBtn"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="Chat"
            />
        
        
    </LinearLayout>

</LinearLayout>
